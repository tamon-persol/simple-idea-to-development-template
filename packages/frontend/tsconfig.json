{
  "compilerOptions": {
    "baseUrl": "./",
    "composite": true,
    "incremental": true,
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types",
    "skipLibCheck": true,
    "paths": {
      "~@/*": ["./src/*"]
    }
  }
}
